                <humidity:HumiditySheet />
            </dxui:SheetBehavior>
            <dxui:SheetBehavior x:Name="TemperatureSheet"
                                IsDraggable="True">
                <temperature:TemperatureSheet />
            </dxui:SheetBehavior>
        </dxui:ModalityLayout.Behaviors>
