                                    <Label Grid.Row="1"
                                           Grid.Column="1"
                                           Margin="0,5,0,0"
                                           VerticalOptions="CenterAndExpand"
                                           VerticalTextAlignment="Start"
                                           LineBreakMode="CharacterWrap"
                                           Text="{Binding Metric.Value}"
                                           TextColor="Black"
                                           FontSize="30"
                                           FontAttributes="Bold" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </FlexLayout>
        </Grid>
    </dxui:ModalityLayout>
</ContentView>